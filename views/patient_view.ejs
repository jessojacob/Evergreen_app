<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<main id="site-main">
    <% if (users.length>0){ 
        var pagenum = 0;
        var totalpages= 0; %>
        <div class="container">
            <div class="form-title text-center">
                <h2 class="text-dark">Account details</h2>
            </div>
                        <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>@Email</th>
                            <th>Gender  </th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show_patient') %>
                    </tbody>
                </table>
            </form>

            <div class="form-title text-center">
                <h2 class="text-dark">Sessions of <%= users[0].member_name %></h2>
            </div>  
                        <!-- form handling -->
            <!-- form handling -->
            <form action="/" method="POST" id="patient_view" >
                <h3>Select Number Of Rows</h3>
				<div class="form-group"> 	<!--		Show Numbers Of Rows 		-->
			 		<select class  ="form-control" name="state" id="maxRows">
						 <option value="5000">Show ALL Rows</option>
						 <option value="5">5</option>
						 <option value="10">10</option>
						 <option value="15">15</option>
						 <option value="20">20</option>
						 <option value="50">50</option>
						 <option value="70">70</option>
						 <option value="100">100</option>
					</select>
			 		
			  	</div>
                <br>
                <table class="table" id="session_table" >
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Remarks</th>    
                            <th>Presciption</th>
                            <% if (admin=="yes"){ %>
                                <th>Action</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show_consulations') %>
                    </tbody>
                </table> 
                <div class='pagination-container' >
                    <nav class="pages">
                        <ul class="pagination">
                
                            <li class = "page" data-page="prev" >
                                <span> < <span class="sr-only">(current)</span></span>
                            </li>
                            <!--	Here the JS Function Will Add the Rows -->
                            <li class = "page" data-page="next" id="prev">
                                <span> > <span class="sr-only">(current)</span></span>
                            </li>
                        </ul>
                    </nav>
                </div>
            </form>
            <div class="box-nav d-flex justify-between">
                <a href="/consultation-view?id=<%= users[0].member_id %>&admin=<%= admin %>" class="border-shadow">
                    <span class="text-gradient">Book consulation <i class="fas fa-user"></i></span>
                </a>
            </div>
        </div>
    <% }else{ %>
        <script>
            alert("User not registered, please register.");
            window.location.href = '/patient-page'
        </script>
    <% } %>
    
</main>
<!-- /Main Site -->

  <!-- include footer -->
  <%- include('include/_footer') %>
  <!-- /include footer -->
  