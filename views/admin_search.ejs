<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> Back</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Search using phone number</h2>
            <span class="text-light">Enter Phone number to search</span>
        </div>
    
        <form action='/member_list' method="GET" id="find_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="Phone" class="text-light">Phone</label>
                    <input type="text" name="phone" value="" placeholder="0091xxxxxxxxxx">
                    <input type="hidden" value="yes" id="admin" name="admin">
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Search</button>
                </div>
        
            </div>
        </form>
        
        <div class="form-title text-center">
            <h2 class="text-dark">OR</h2>
            <h2 class="text-dark">Search using Name</h2>
            <span class="text-light">Enter Name to search</span>
        </div>
    
        <form action='/member_search' method="GET" id="find_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="text" name="name" value="" placeholder="Mark Stoenis">
                    <input type="hidden" value="yes" id="admin" name="admin">
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Search</button>
                </div>
        
            </div>
        </form>

    </div>
</main>
  <!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->